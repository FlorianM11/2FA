{% extends 'base.html.twig' %}

{% block title %}My Super App{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Hello {{ name|default('World') }}!</h1>
        <h2>App version: <span class="badge badge-primary">{{ app_version|default('Unknown') }}</span> on Symfony {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</h2>
        <p class="lead">This app is a POC of CI & CD with Symfony and Docker.</p>
        <div id="inner">This will be modified by Javascript</div>
        {{ description|raw }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}